{
	"linters": {
		"clang-format": {
			"type": "clang-format",
			"include": "(.*\\.(c|cpp|h|hpp)$)",
			"exclude": "(^(src|include)/(rtos/|display/lv_.+))"
		},
		"spelling": {
			"type": "spelling",
			"include": "(.*)",
			"exclude": "(^(src|include)|(rtos/|display/lv_.*))"
		},
		"text": {
			"type": "text",
			"include": "(.*)",
			"exclude": "(^(src|include)/(((rtos)/)|(system/dev/banners.h)|(display/((lv_.+)|(licence.txt)))))",
			"severity": {
				"2": "disabled",
				"3": "disabled"
			}
		}
	}
}
